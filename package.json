{
  "name": "react-offline-hoc",
  "version": "0.0.2",
  "description": "React higher-order component for detecting network offline state",
  "main": "lib/offline.js",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "babel src -d lib",
    "lint": "eslint src test config",
    "test": "jest --verbose test",
    "test-watch": "npm run test -- --watch",
    "cover": "npm run test -- --coverage",
    "coveralls": "npm run cover && cat coverage/lcov.info | coveralls",
    "prepublish": "npm run clean && npm run build && derive-pkg -d lib",
    "publish": "npm publish lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LINKIWI/react-offline-hoc.git"
  },
  "author": "Kevin Lin <developer@kevinlin.info>",
  "license": "MIT",
  "pre-commit": [
    "lint",
    "test"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.8",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "coveralls": "^2.13.1",
    "derive-pkg-cli": "^1.0.0",
    "enzyme": "^2.9.1",
    "eslint": "^4.6.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-disable": "^0.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.0.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "jest": "^20.0.4",
    "pre-commit": "^1.2.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1"
  },
  "peerDependencies": {
    "react": "^15.6.1"
  }
}
